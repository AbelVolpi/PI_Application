<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.projetointegrador.pi_application.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.projetointegrador.pi_application.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/enter_from_left"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_left" />
        <action
            android:id="@+id/action_homeFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:enterAnim="@anim/enter_from_left"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_left" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/enter_from_left"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_left" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.projetointegrador.pi_application.ui.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/createCampaignFragment"
        android:name="com.projetointegrador.pi_application.ui.CreateCampaignFragment"
        android:label="fragment_create_campaign"
        tools:layout="@layout/fragment_create_campaign" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.projetointegrador.pi_application.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.projetointegrador.pi_application.ui.SignUpFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_registerFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.projetointegrador.pi_application.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_createCampaignFragment"
            app:destination="@id/createCampaignFragment" />
        <action
            android:id="@+id/action_profileFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_profileFragment_to_campaignsHistoricFragment"
            app:destination="@id/campaignsHistoricFragment"
            app:enterAnim="@anim/enter_from_left"
            app:exitAnim="@anim/exit_to_right"
            app:popEnterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_left" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/campaignsHistoricFragment"
        android:name="com.projetointegrador.pi_application.ui.CampaignsHistoricFragment"
        android:label="fragment_campaigns_historic"
        tools:layout="@layout/fragment_campaigns_historic">
        <action
            android:id="@+id/action_campaignsHistoricFragment_to_viewCampaignFragment"
            app:destination="@id/viewCampaignFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewCampaignFragment"
        android:name="com.projetointegrador.pi_application.ui.ViewCampaignFragment"
        android:label="fragment_view_campaign"
        tools:layout="@layout/fragment_view_campaign" />
</navigation>